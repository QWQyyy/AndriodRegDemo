<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="用户名："
                android:gravity="right"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ed1"
                android:enabled="true"
                android:textSize="25sp"
                android:hint="用户名长度不小于8"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="密码："
                android:textColor="#000000"
                android:gravity="right"
                android:textSize="25sp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ed2"
                android:enabled="true"
                android:textSize="25sp"
                android:inputType="numberPassword"
                android:hint="请输入6到16位的密码"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="重复密码："
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/ed3"
                android:enabled="true"
                android:inputType="numberPassword"
                android:textSize="25sp"
                android:hint="请输入6到16位的密码"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="性别："
                android:textColor="#000000"
                android:gravity="right"
                android:textSize="25sp"
                android:layout_weight="1"/>
            <RadioGroup
                android:id="@+id/rg"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="男"
                    android:textSize="25sp"/>
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="女"
                    android:textSize="25sp"/>
            </RadioGroup>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="爱好："
                android:textColor="#000000"
                android:gravity="right"
                android:textSize="25sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn1"
                android:text="请选择"
                android:textSize="25sp"
                android:onClick="ahClick"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:text="籍贯："
                android:textColor="#000000"
                android:gravity="right"
                android:textSize="25sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn2"
                android:text="请选择"
                android:textSize="25sp"
                android:onClick="gjClick"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:onClick="zcClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:onClick="qxClick"/>
    </LinearLayout>
</LinearLayout>